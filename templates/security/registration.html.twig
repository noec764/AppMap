{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>
    {{ form_start(form) }}
    {{ form_row(form.username,{'label':"Nom d'utilisateur",'attr':{'placeholder':"Nom d'utilisateur"}}) }}
    {{ form_row(form.email,{'label':"Adresse email",'attr':{'placeholder':"Adresse email..."}}) }}
    {{ form_row(form.adresse,{'label':"Adresse",'attr':{'placeholder':"Adresse ..."}}) }}
    {{ form_row(form.dateNaissance,{'label':"Date de Naissance",'attr':{'placeholder':"Date de Naissance..."}}) }}
    {{ form_row(form.password,{'label':"Mot de passe",'attr':{'placeholder':"Mot de passe"}}) }}
    {{ form_row(form.confirm_password,{'label':" Confirmation du mot de passe",'attr':{'placeholder':"Confirmez le mot de passe"}}) }}
    <button type="submit" class="btn btn-primary">Inscription</button>
    {{ form_end(form) }}
{% endblock %}