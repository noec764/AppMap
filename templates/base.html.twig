<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
               and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %}
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">AppMap</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app') }}">Accueil
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('map') }}">Map</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('prod_registration') }}">Je suis un Producteur</a>
                    </li>
                    {% endif %}

                </ul>
                {% if not app.user %}
                    <div class="nav-item" style="text-align: right;padding-right: 10px">
                        <a class="nav-link" href="{{ path('security_registration') }}">S'inscrire</a>
                    </div>
                    <div class="nav-item" style="text-align: right;padding-right: 10px">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </div>
                {% else %}
                    <div class="nav-item" style="text-align: right;padding-right: 10px">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                    </div>
                {% endif %}
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
